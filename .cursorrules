import fs from "node:fs";
import path from "node:path";

const ROOT = process.cwd();
const exts = new Set([".tsx"]);
const banned = [".map(", ".filter(", ".reduce("];

function walk(dir) {
  const out = [];
  for (const entry of fs.readdirSync(dir, { withFileTypes: true })) {
    if (entry.name.startsWith(".") || entry.name === "node_modules" || entry.name === ".next") continue;
    const p = path.join(dir, entry.name);
    if (entry.isDirectory()) out.push(...walk(p));
    else if (exts.has(path.extname(entry.name))) out.push(p);
  }
  return out;
}

let violations = [];
for (const file of walk(path.join(ROOT, "src"))) {
  const text = fs.readFileSync(file, "utf8");
  // crude but effective: block in JSX return blocks
  // If you need exceptions, refactor into precomputed variables.
  if (text.includes("return (")) {
    for (const b of banned) {
      if (text.includes("return (") && text.includes(b)) {
        violations.push(`${file}: contains ${b} inside a component that returns JSX`);
      }
    }
  }
}

if (violations.length) {
  console.error("JSX shaping guard failed:\n" + violations.map(v => "- " + v).join("\n"));
  process.exit(1);
}
console.log("JSX shaping guard passed.");


